<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/conta_card_height"
    android:layout_marginStart="@dimen/conta_card_margin"
    android:layout_marginEnd="@dimen/conta_card_margin"
    card_view:cardCornerRadius="@dimen/conta_card_radius"
    card_view:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/rlComanda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/statusContaImageView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nomeContaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:textColor="@color/contaTextView"
            android:text="@string/nome_da_conta"
            android:textAlignment="textStart"
            android:textSize="@dimen/conta_item_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/saldoContaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignBaseline="@id/nomeContaTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:textSize="@dimen/conta_item_text_size"
            android:text="@string/saldo_inicial" />

    </RelativeLayout>

</android.support.v7.widget.CardView>